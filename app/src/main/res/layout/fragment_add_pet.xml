<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pet Name"/>

    <EditText
        android:id="@+id/loaiEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pet Type"/>

    <EditText
        android:id="@+id/tuoiEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Age"/>

    <EditText
        android:id="@+id/imageUrlEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Image URL"/>

    <EditText
        android:id="@+id/lichTiemEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Vaccine Schedule"
        android:focusable="false"
        android:clickable="true"/>

    <EditText
        android:id="@+id/lichKiemTraSucKhoeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Health Check Schedule"
        android:focusable="false"
        android:clickable="true"/>

    <Button
        android:id="@+id/addButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Pet" />
</LinearLayout>
