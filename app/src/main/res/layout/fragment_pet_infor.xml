<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:text="Tên: " />

        <TextView
            android:id="@+id/tvTen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Loài: " />

        <TextView
            android:id="@+id/tvLoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Tuổi: " />

        <TextView
            android:id="@+id/tvTuoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:text="Giống: " />

        <TextView
            android:id="@+id/tvGioiTinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:src="@drawable/ic_launcher_foreground" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:src="@drawable/ic_launcher_foreground" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:src="@drawable/ic_launcher_foreground" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_hoso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hồ sơ khám bệnh" />

    <Button
        android:id="@+id/btn_lichtrinh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lịch trình thú cưng" />

    <Button
        android:id="@+id/btn_dexuat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đề xuất dinh dưỡng /  hoạt động" />

    <Button
        android:id="@+id/btn_tiemphong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tiêm phòng" />

    <Button
        android:id="@+id/btn_lhbacsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lh.Bác sĩ/ Dịch vụ thú cưng" />

</LinearLayout>