<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFF8F0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_soft_card"
        android:padding="24dp"
        android:layout_margin="16dp"
        android:elevation="6dp">

        <!-- Pet Info Card -->
        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên: Mèo Mun"
            android:textSize="20sp"
            android:textStyle="bold"
            android:drawableLeft="@android:drawable/ic_menu_info_details"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:textColor="#37474F" />

        <TextView
            android:id="@+id/tvLoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loài: Mèo"
            android:textSize="18sp"
            android:drawableLeft="@android:drawable/ic_menu_gallery"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:textColor="#455A64" />

        <TextView
            android:id="@+id/tvTuoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tuổi: 2"
            android:textSize="18sp"
            android:drawableLeft="@android:drawable/ic_menu_recent_history"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:textColor="#455A64" />

        <TextView
            android:id="@+id/tvGioiTinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giới tính: Đực"
            android:textSize="18sp"
            android:drawableLeft="@android:drawable/ic_menu_myplaces"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:textColor="#455A64" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvLichTiemTitle"
            android:text="Lịch tiêm chủng"
            android:textSize="18sp"
            android:drawableLeft="@android:drawable/ic_menu_agenda"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:textColor="#455A64" />

        <TextView
            android:id="@+id/tvLichTiem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lịch tiêm: 01/01/2025"
            android:textSize="18sp"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:layout_marginLeft="24dp"
            android:textColor="#455A64" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvLichKiemTraTitle"
            android:text="Lịch kiểm tra sức khỏe"
            android:textSize="18sp"
            android:drawableLeft="@android:drawable/ic_menu_agenda"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:textColor="#455A64" />

        <TextView
            android:id="@+id/tvLichKiemTra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lịch kiểm tra sức khỏe: 01/06/2025"
            android:textSize="18sp"
            android:layout_marginLeft="24dp"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:textColor="#455A64" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn giờ ăn theo buổi"
            android:textSize="18sp"
            android:drawableLeft="@android:drawable/ic_menu_recent_history"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:textColor="#455A64" />

        <Spinner
            android:id="@+id/spBuoiAn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@android:drawable/btn_dropdown" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/etGioAnTheoBuoi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Chọn giờ ăn"
                android:focusable="false"
                android:clickable="true"
                android:background="@android:drawable/edit_text"
                android:padding="12dp"
                android:textColor="#37474F"
                android:textSize="16sp" />

<!--            <Switch-->
<!--                android:id="@+id/switchOnOff"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginLeft="16dp"-->
<!--                />-->

        </LinearLayout>




    </LinearLayout>
</ScrollView>
